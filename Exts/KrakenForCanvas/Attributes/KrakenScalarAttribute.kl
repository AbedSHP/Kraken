require Math;

struct KrakenScalarAttribute : KrakenAttribute {
  Scalar min;
  Scalar max;
  Scalar value;
};

/// \dfgPresetFolder Attributes
function KrakenScalarAttribute(
  String name,
  String path,
  Boolean keyable,
  Boolean animatable,
  Scalar min,
  Scalar max,
  Scalar value
) {
  this.name = name;
  this.path = path;
  this.keyable = keyable;
  this.animatable = animatable;
  this.min = min;
  this.max = max;
  this.value = value < min ? min : (value > max ? max : value);
}

